{% extends 'admin.html.twig' %}


{% block body %}
<div class="container">
<div class="alert alert-warning mt-3">
<h2 class="font-weight-bold text-primary">Category List</h2>
 </div>
 <div class="row">
 <div class="col">
 {{ subcategories|raw }}
</div>
<div class="col">
    <div class="mt-3 alert alert-success rounded-0">
        <h3 class="text-center font-weight-bold">Add Category/Sub-Category</h3>
        {{ form_start(form) }}
            {{ form_widget(form.name,{'attr':{'class': 'form-control rounded-0','placeholder':'Category'}}) }}
            <select name="category[parent]" class="form-control mt-1 rounded-0">
                {{ render(controller('App\\Controller\\CategoryController::getAllCategories')) }}
            </select>
            <button class="btn btn-danger btn-block mt-2 rounded-0">Add Category</button>
        {{ form_end(form) }}
    </div>
    </div>
    </div>
 </div>
{% endblock  %}

